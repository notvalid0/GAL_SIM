{
  "name": "gal-sim",
  "version": "1.0.0",
  "description": "基于LLM的Galgame对话模拟器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win-proxy": "ELECTRON_BUILDER_HTTPS_PROXY=$HTTPS_PROXY electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "galgame",
    "llm",
    "ai"
  ],
  "author": "GAL-SIM",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-is-dev": "^2.0.0"
  }
}
