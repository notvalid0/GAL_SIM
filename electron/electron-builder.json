{
  "appId": "com.gal-sim.app",
  "productName": "GAL-SIM",
  "directories": {
    "output": "dist"
  },

  "files": [
    "main.js",
    "preload.js",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "../gal_sim",
      "to": "app/gal_sim",
      "filter": ["**/*"]
    },
    {
      "from": "../requirements.txt",
      "to": "app/requirements.txt"
    },
    {
      "from": "../run_server.py",
      "to": "app/run_server.py"
    },
    {
      "from": "../.env.example",
      "to": "app/.env.example"
    },
    {
      "from": "../.env",
      "to": "app/.env",
      "filter": ["**/*"]
    },
    {
      "from": "../setup_dependencies.sh",
      "to": "app/setup_dependencies.sh"
    },
    {
      "from": "../setup_dependencies.bat",
      "to": "app/setup_dependencies.bat"
    },
    {
      "from": "../USER_GUIDE.md",
      "to": "app/USER_GUIDE.md"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "../gal_sim/static/favicon.ico"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "../gal_sim/static/favicon.ico",
    "category": "public.app-category.entertainment"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "../gal_sim/static/favicon.ico",
    "category": "Game"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "GAL-SIM",
    "perMachine": false,
    "deleteAppDataOnUninstall": false
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}",
    "requestExecutionLevel": "user",
    "unpackDirName": "GAL-SIM"
  }
}